{
    "files.exclude": {
    	"**/.git": true,
    	"**/.sass-cache": true,
		"**/.tmp": true,
		"**/node_modules": true,
		"_site" : true,
		".vscode" : true
  	},

	"[markdown]": {
		// no unnerving completion popups
		"editor.wordBasedSuggestions": false,

		// do enforce spaces (otherwise trouble in code quotes)
		"editor.insertSpaces": true,
		"editor.detectIndentation": false,
		"editor.tabSize": 2,
	},

    "html.format.endWithNewline": false,
    "html.format.extraLiners": "",
    "css.validate": true,
	"scss.validate": true,
	"editor.tabSize": 2
}